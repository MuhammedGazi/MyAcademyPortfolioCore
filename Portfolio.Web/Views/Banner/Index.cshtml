@model List<Banner>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Banner Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Banner Oluştur</a>
</p>

<table class="table table-striped table-bordered"
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                    {
                        <img src="@item.CoverImageUrl" alt="Kapak Resmi" style="max-width: 150px; height: auto;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BannerId" class="btn btn-warning btn-sm">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.BannerId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

