@model List<About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-4">
    <hr />

    <a asp-controller="About" asp-action="CreateAbout" class="btn btn-primary mb-3">Yeni "Hakkında" Bilgisi Ekle</a>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Görsel</th>
                <th>Başlık</th>
                <th>Şehir</th>
                <th>Email</th>
                <th>Durum</th>
                <th style="width: 280px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" alt="Profil Fotoğrafı" style="width: 75px; height: 75px; object-fit: cover; border-radius: 50%;" /></td>
                    <td>@item.Title</td>
                    <td>@item.City</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        @if (!item.IsAvailable)
                        {
                            <a asp-controller="About" asp-action="IsAvailable" asp-route-id="@item.AboutId" class="btn btn-success btn-sm">Aktif Et</a>
                        }
                        <a asp-controller="About" asp-action="EditAbout" asp-route-id="@item.AboutId" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-controller="About" asp-action="DeleteAbout" asp-route-id="@item.AboutId" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

