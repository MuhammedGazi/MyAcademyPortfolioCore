@model Skill
@{
    ViewData["Title"] = "editSkill";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-4">
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="editSkill">
                        <input type="hidden" asp-for="SkillId" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label">Yetenek Adı</label>
                            <input asp-for="Title" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Percentage" class="control-label">Yüzdelik Değer</label>
                            <input asp-for="Percentage" type="number" min="0" max="100" class="form-control" />
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                            <a asp-action="Skills" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Listeye Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


