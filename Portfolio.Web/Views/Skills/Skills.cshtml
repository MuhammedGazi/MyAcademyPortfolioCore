@model List<Skill>
@{
    ViewData["Title"] = "Skills";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-action="createSkills" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Yetenek Ekle
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4">Yetenek Düzeyleri</h5>

            @if (Model.Any())
            {
                foreach (var skill in Model)
                {
                    <div class="mb-3">

                        <div class="d-flex align-items-center mb-1">

                            <p class="mb-0"><strong>@skill.Title</strong></p>

                            <div class="ms-3">
                                <a asp-action="editSkill" asp-route-id="@skill.SkillId" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="deleteSkill" asp-route-id="@skill.SkillId" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>

                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @skill.Percentage%;" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100">
                                <strong>@skill.Percentage%</strong>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    Henüz gösterilecek bir yetenek yok.
                </div>
            }
        </div>
    </div>
</div>



