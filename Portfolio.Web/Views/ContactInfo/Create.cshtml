@model ContactInfo
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Yeni İletişim Bilgisi Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label">Telefon Numarası</label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">E-posta</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="MapUrl" class="control-label">Harita URL'si</label>
                <input asp-for="MapUrl" class="form-control" type="url" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label">Adres</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

