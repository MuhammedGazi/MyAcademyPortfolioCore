@model  Education
@{
    ViewData["Title"] = "Yeni Eğitim Ekle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Yeni Eğitim Ekle</h1>

<h4>Eğitim</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="SchoolName" class="control-label">Okul Adı</label>
                <input asp-for="SchoolName" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Department" class="control-label">Bölüm</label>
                <input asp-for="Department" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartYear" class="control-label">Başlangıç Yılı</label>
                <input asp-for="StartYear" class="form-control" type="number" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndYear" class="control-label">Bitiş Yılı</label>
                <input asp-for="EndYear" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

