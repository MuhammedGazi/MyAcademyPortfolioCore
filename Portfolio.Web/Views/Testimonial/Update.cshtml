@model Testimonial
@{
    ViewData["Title"] = "Referans Bilgisini Düzenle";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>Referans Bilgisini Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Update">
            <input type="hidden" asp-for="TestimonialId" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Ad Soyad</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Unvan</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label">Resim URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Review" class="control-label">Puan (1-5)</label>
                <input asp-for="Review" class="form-control" type="number" min="1" max="5" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label">Yorum</label>
                <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

