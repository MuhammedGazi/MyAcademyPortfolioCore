@model List<Skill>
@*
   Default Skills Component
*@
<section id="skills" class="skills section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Yetenekler</h2>
        <p>Sahip olduğum teknik ve profesyonel yetenekler.</p>
    </div><div class="container" data-aos="fade-up" data-aos-delay="100">

        @{
            int half = (int)Math.Ceiling(Model.Count() / 2.0);
        }

        <div class="row skills-content skills-animation">

            <div class="col-lg-6">

                @foreach (var skill in Model.Take(half))
                {
                    <div class="progress">
                        <span class="skill"><span>@skill.Title</span> <i class="val">@skill.Percentage%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>

            <div class="col-lg-6">

                @foreach (var skill in Model.Skip(half))
                {
                    <div class="progress">
                        <span class="skill"><span>@skill.Title</span> <i class="val">@skill.Percentage%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@skill.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>

</section>