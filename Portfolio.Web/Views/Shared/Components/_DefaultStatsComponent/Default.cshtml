
@*
   Default Stats Component
*@

<section id="stats" class="stats section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Sayısal Verilerle Ben</h2>
        <p>Şimdiye kadar yaptığım işlerde elde ettiğim istatistikleri sizlerle paylaşıyorum</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.clients" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Müşteriler</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.projects" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Proje sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.experiences" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Deneyim Sayısı</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@ViewBag.userMessage" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Gelen Mesajlar</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section><!-- /Stats Section -->